{
  "$schema": "https://schemas.cerberauth.com/templates/draft/2024-09/application.schema.json",
  "name": "Remix App",
  "description": "Remix Application with OpenID Connect.",
  "identifier": "remix-app",
  "icon": {
    "contentUrl": "https://nacho.cerberauth.com/logos/remix.svg"
  },
  "technologies": [
    "javascript",
    "react",
    "remix"
  ],
  "client": {
    "applicationType": "webApplication",
    "grantTypes": [
      "authorization_code",
      "pkce",
      "refresh_token"
    ],
    "tokenEndpointAuthMethods": [
      "client_secret_basic",
      "client_secret_post"
    ],
    "scopes": [
      "openid",
      "offline_access",
      "profile",
      "email"
    ]
  }
}