{
  "$schema": "https://schemas.cerberauth.com/templates/draft/2024-09/application.schema.json",
  "name": "Ruby on Rails App",
  "description": "Ruby on Rails Application with OpenID Connect.",
  "identifier": "ruby-rails-app",
  "icon": {
    "contentUrl": "https://nacho.cerberauth.com/logos/rails.svg"
  },
  "technologies": [
    "ruby",
    "rails"
  ],
  "libraries": [
    {
      "name": "omniauth-openid-connect",
      "description": "OmniAuth strategy for OpenID Connect.",
      "url": "https://github.com/omniauth/omniauth_openid_connect"
    }
  ],
  "client": {
    "applicationType": "webApplication",
    "grantTypes": [
      "authorization_code",
      "pkce",
      "refresh_token"
    ],
    "tokenEndpointAuthMethods": [
      "client_secret_basic",
      "client_secret_post"
    ],
    "scopes": [
      "openid",
      "offline_access",
      "profile",
      "email"
    ]
  }
}
