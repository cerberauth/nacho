{
  "$schema": "https://schemas.cerberauth.com/templates/draft/2024-09/application.schema.json",
  "name": "Hapi App",
  "description": "Hapi Application with OpenID Connect.",
  "identifier": "hapi-app",
  "icon": {
    "contentUrl": "https://nacho.cerberauth.com/logos/hapi.svg"
  },
  "technologies": [
    "javascript",
    "typescript",
    "node.js",
    "hapi"
  ],
  "client": {
    "applicationType": "webApplication",
    "grantTypes": [
      "authorization_code",
      "pkce",
      "refresh_token"
    ],
    "tokenEndpointAuthMethods": [
      "client_secret_basic",
      "client_secret_post"
    ],
    "scopes": [
      "openid",
      "offline_access",
      "profile",
      "email"
    ]
  }
}