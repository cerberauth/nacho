{
  "$schema": "https://schemas.cerberauth.com/templates/draft/2024-09/application.schema.json",
  "name": "Elixir App",
  "description": "Elixir Application with OpenID Connect.",
  "identifier": "elixir-app",
  "icon": {
    "contentUrl": "https://nacho.cerberauth.com/logos/elixir.svg"
  },
  "technologies": [
    "erlang",
    "elixir"
  ],
  "client": {
    "applicationType": "webApplication",
    "grantTypes": [
      "authorization_code",
      "pkce",
      "refresh_token"
    ],
    "tokenEndpointAuthMethods": [
      "client_secret_basic",
      "client_secret_post"
    ],
    "scopes": [
      "openid",
      "offline_access",
      "profile",
      "email"
    ]
  }
}