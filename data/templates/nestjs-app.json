{
  "$schema": "https://schemas.cerberauth.com/templates/draft/2024-09/application.schema.json",
  "name": "Nest.js App",
  "description": "Nest.js Application with OpenID Connect.",
  "identifier": "nestjs-app",
  "icon": {
    "contentUrl": "https://nacho.cerberauth.com/logos/nestjs.svg"
  },
  "technologies": [
    "javascript",
    "typescript",
    "node.js",
    "nest.js",
    "express.js",
    "fastify"
  ],
  "libraries": [
    {
      "name": "openid-client",
      "description": "OpenID Certifiedâ„¢ Relying Party (OpenID Connect/OAuth 2.0 Client) implementation for Node.js.",
      "url": "https://github.com/panva/node-openid-client"
    }
  ],
  "client": {
    "applicationType": "webApplication",
    "grantTypes": [
      "authorization_code",
      "pkce",
      "refresh_token"
    ],
    "tokenEndpointAuthMethods": [
      "client_secret_basic",
      "client_secret_post"
    ],
    "scopes": [
      "openid",
      "offline_access",
      "profile",
      "email"
    ]
  }
}