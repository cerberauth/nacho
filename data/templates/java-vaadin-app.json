{
  "$schema": "https://schemas.cerberauth.com/templates/draft/2024-09/client.schema.json",
  "name": "Vaadin Application",
  "description": "Vaadin Application with OpenID Connect.",
  "identifier": "java-vaadin-app",
  "icon": {
    "contentUrl": "https://nacho.cerberauth.com/logos/java-vaadin.svg"
  },
  "technologies": [
    "java",
    "vaadin"
  ],
  "client": {
    "applicationType": "webApplication",
    "grantTypes": [
      "authorization_code",
      "pkce",
      "refresh_token"
    ],
    "tokenEndpointAuthMethods": [
      "client_secret_basic",
      "client_secret_post"
    ],
    "scopes": [
      "openid",
      "offline_access",
      "profile",
      "email"
    ]
  }
}